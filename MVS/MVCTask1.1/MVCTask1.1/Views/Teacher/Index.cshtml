@model IEnumerable<MVCTask1._1.Models.Teacher>

<div class="container mt-5">
    <h1 class="mb-4">Müəllimlər</h1>
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Müəllim Əlavə Et
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Ad</th>
                <th scope="col">Təsvir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.Id</td>
                    <td>@teacher.Name</td>
                    <td>@teacher.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>

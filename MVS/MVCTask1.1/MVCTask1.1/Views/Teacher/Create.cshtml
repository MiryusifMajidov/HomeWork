
@model Teacher

<div class="container mt-5">
    <h1 class="mb-4">Müəllim Yarat</h1>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="Name" class="form-label">Ad</label>
            <input asp-for="Name"  class="form-control" placeholder="Müəllimin adını daxil edin" required />
            <div class="invalid-feedback">
                Zəhmət olmasa, düzgün ad daxil edin.
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Təsvir</label>
            <textarea asp-for="Description" class="form-control" placeholder="Qısa təsviri daxil edin" rows="4" required></textarea>
            <div class="invalid-feedback">
                Zəhmət olmasa, təsvir daxil edin.
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Yadda saxla
            </button>
        </div>
    </form>
</div>

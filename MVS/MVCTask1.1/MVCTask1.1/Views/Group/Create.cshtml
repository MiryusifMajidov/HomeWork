@model MVCTask1._1.Models.Group

<div class="container mt-5">
    <h1 class="mb-4">Qrup Yarat</h1>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="GroupName" class="form-label">Qrup Adı</label>
            <input asp-for="GroupName" class="form-control" placeholder="Qrupun adını daxil edin" required />
            <div class="invalid-feedback">
                Zəhmət olmasa, qrup adını daxil edin.
            </div>
            <span asp-validation-for="GroupName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="TeacherId" class="form-label">Müəllim</label>
            <select asp-for="TeacherId" class="form-control" required>
                <option value="">Müəllim seçin</option>
                @if (ViewBag.Teachers != null)
                {
                    @foreach (var teacher in ViewBag.Teachers)
                    {
                        <option value="@teacher.Id">@teacher.Name</option>
                    }
                }
            </select>
            <div class="invalid-feedback">
                Zəhmət olmasa, müəllim seçin.
            </div>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Yadda saxla
            </button>
        </div>
    </form>
</div>

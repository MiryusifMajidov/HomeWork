@model IEnumerable<MVCTask1._1.Models.Student>

<div class="container mt-5">
    <h1 class="mb-4">Tələbələr</h1>
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Tələbə Əlavə Et
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Ad</th>
                <th scope="col">Qrup</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Group?.GroupName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model MVCTask1._1.Models.Student

<div class="container mt-5">
    <h1 class="mb-4">Tələbə Yarat</h1>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="Name" class="form-label">Ad</label>
            <input asp-for="Name" class="form-control" placeholder="Tələbənin adını daxil edin" required />
            <div class="invalid-feedback">
                Zəhmət olmasa, tələbənin adını daxil edin.
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="GroupId" class="form-label">Qrup</label>
            <select asp-for="GroupId" asp-items="@(new SelectList(ViewBag.Groups, "Id", "GroupName"))" class="form-control"></select>
            <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Yadda saxla
            </button>
        </div>
    </form>
</div>

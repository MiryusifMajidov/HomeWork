@using GameStore.Model.DTOs.User
@model UserLoginDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>

        header {
            display: none;
        }

        footer {
            display: none;
        }
    </style>
</head>
<body class="bg-gray-100 flex justify-center items-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Login</h2>
        <form  method="POST">
            <div class="mb-4">
                <label asp-for="UsernameOrEmail" class="block text-sm font-medium text-gray-700">Username</label>
                <input type="text" asp-for="UsernameOrEmail" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 shadow-sm">
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" asp-for="Password" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 shadow-sm">
            </div>
            <div class="mb-4 flex items-center">
                <input type="checkbox" asp-for="isPersistant"
                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                <label asp-for="isPersistant" class="ml-2 block text-sm text-gray-700">Remember Me</label>
            </div>


            <button type="submit"
                    class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Login
            </button>
        </form>

        <p class="text-sm text-gray-600 mt-4 text-center">
            Don't have an account? <a asp-controller="Account" asp-action="Login" class="text-blue-500 hover:underline">Register</a>
        </p>
    </div>
</body>
</html>

@using GameStore.Model.DTOs.User
@model UserRegisterDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
         
        header{
            display: none;
        }

        

        footer {
            display: none;
        }
 
    </style>
</head>
<body class="bg-gray-100 flex justify-center items-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Register</h2>
        <form method="POST">
            <div class="mb-4">
                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                <input type="text"  asp-for="FirstName" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 shadow-sm">
            </div>

            <div class="mb-4">
                <label asp-for="LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                <input type="text"  asp-for="LastName" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 shadow-sm">
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email"  asp-for="Email" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 shadow-sm">
            </div>

            <div class="mb-4">
                <label asp-for="Username" class="block text-sm font-medium text-gray-700">Username</label>
                <input type="text" asp-for="Username" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 shadow-sm">
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" asp-for="Password" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 shadow-sm">
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input type="password" id="confirm_password" asp-for="ConfirmPassword" required
                       class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 shadow-sm">
            </div>

            <button type="submit"
                    class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Register
            </button>
        </form>

        <p class="text-sm text-gray-600 mt-4 text-center">
            Already have an account? <a asp-controller="Account" asp-action="Login" class="text-blue-500 hover:underline">Login</a>
        </p>
    </div>
</body>
</html>

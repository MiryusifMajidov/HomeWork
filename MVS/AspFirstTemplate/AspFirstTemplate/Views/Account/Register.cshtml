<style>
    #main_nav {
        display: none;
    }

    footer {
        display: none;
    }
</style>

@using AspFirstTemplate.DTOs.UserDTOs;
@model CreateUserDto;
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" asp-for="FirstName">
                                        <span asp-validation-for="FirstName" class="alert-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" asp-for="LastName">
                                    <span asp-validation-for="LastName" class="alert-danger"></span>

                                    </div>
                                </div>
                                <br>

                                <div class="form-group">
                                <input type="email" class="form-control form-control-user" asp-for="Email">
                                <span asp-validation-for="Email" class="alert-danger"></span>
                                </div>

                                <br>
                                <div class="form-group">
                                <input type="text" class="form-control form-control-user" asp-for="Username">
                                <span asp-validation-for="Username" class="alert-danger"></span>
                                </div>
                                <br>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user"
                                           asp-for="Password">
                                    <span asp-validation-for="Password" class="alert-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                           asp-for="ConfirmPassword">
                                    <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                                    </div>
                                </div>
                                
                              
                               
                                <br>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </button>
                                
                               
                            </form>
                            <hr>
                            @* <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div> *@
                            <div class="text-center">
                                <a class="small" asp-action="Login">Already have an account? Login!</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <p>
                                    @Html.ValidationSummary()
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
